{% block main %}


    <p>{{ message }}</p>



    <form method="POST" action="{{ path('article_update', {id: article.id}) }}">

        <label>Titre de l'article</label>
        <input type="text" name="title" value="{{ article.title }}" /> <br> <br>

        <label>Contenu</label>
        <textarea type="text" name="content">{{ article.content }}</textarea> <br> <br>

